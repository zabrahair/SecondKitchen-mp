.register {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 30vh;  
}

.register button {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 40vw;
  height: 6vh;  
}

.value_correct {
  color: black;
}

.value_incorrect {
  color: red;
}
