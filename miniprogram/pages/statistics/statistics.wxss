.container{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;  

  width: 100vw;
  height: 100vh;
}

.header {
}

.content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 100vh;
}

.conditions {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;

  width: 100vw;
  height: 5vh;
}

.date_picker {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 49vw;
  height: 5vh;  
  border: 1px solid black;
  padding-left: 5px;
  font-size: 4vw;
}

.tabs_list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  /* background: darkgray; */
  width: 100vw;
  height: 5vh;
  margin-top: 2px;
}

.statistics {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  border: 1px solid black;  
  width: 100vw;
  height: 90vh;
}

.tab {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 33vw;
  height: 5vh;
  border: 1px solid black;  
}

.tabs_list .unselected {
  background-color: darkgray;
}

.tabs_list .selected {
  background-color: white;
  box-shadow: 5px 0px 3px darkgray;
}

.statistics .unselected {
  display: none; 
}

.statistics .selected {
  display: block;

  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 89.5vh;
  margin-top: -0.4vh;

}

