.container{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;  

  width: 100vw;
  height: 100vh;
  background-color: rgba(100,100,100,0.5);
  z-index: 10;
}

.header{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;  

  margin-top: 5vh;
  width: 90vw;
  height: 7vh;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 1vw 1vw 1vw grey;
  background-color: #46bf66;

}

.editor_name {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  color: white;
  font-size: 5vw;

}

.content{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;  

  width: 90vw;
  height: 55vh;

  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 1vw 1vw 1vw grey;
  background-color: whitesmoke;
}

.member_editor {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;   

  margin-left: 2vw;
  padding-top: 1vh;
  width: 80vw;
  height: 60vh;
}

.add_member_image {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  margin-top: 3vh;
  width: 20vh;
  height: 20vh;
  border: 1px solid darkgrey; 

  color: darkgrey;
  
  font-size: 10vw;
  position: relative; 
  background-size: cover;
  background-repeat: no-repeat;
}

.member_name {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:flex-start;
  align-items: center;

  margin-top: 5vh;
  color: darkgrey;
  font-size: 5vw;
}

.member_name .capital {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:flex-start;
  align-items: center;

  color: grey;
  margin-right: 2vw;
  margin-top: 2vw;

  font-size: 4.5vw;
}

.member_input {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:flex-start;
  align-items: center;
  
  margin-top: 1vh;
  border: 1px solid gainsboro;
  width: 48vw;

  height: 7vh;
  padding-left: 2vw;
}

.add_member_input_ph {
  padding-left: 2vw;
}

.operators {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center; 

  width: 90vw;
  height: 20vh;
  margin-left: 0vw;
}

.close_button {
  position: absolute;

  bottom: 20vh;
  width: 10vw;
  height: 10vw;
}

.edit_member{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center; 

  width:  30vw;
  height: 5vh;
  padding-top: 2vw;
}